// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int @id @default(autoincrement())
  name        String
}

model Picture {
  id          Int @id @default(autoincrement())
  location    String
  date        DateTime
  created     DateTime
  updated     DateTime
}

model Memory {
  id          Int @id @default(autoincrement())
  name        String
  description String
  date        DateTime
  created     DateTime
  updated     DateTime?
}